<Window x:Class="tinyBrightness.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tinyBrightness"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="About" WindowStartupLocation="CenterScreen"  Width="320" ResizeMode="NoResize" Height="180">
    <Grid x:Name="Main_Grid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Grid.Row="0"><Run FontSize="18" Text="tinyBrightness"/><LineBreak/><Run x:Name="Version_Text" Text="Version " Foreground="#FF858585" FontSize="11"/><LineBreak/><Run Text="Tiny utility to change monitor brightness via DDC/CI interface."/></TextBlock>
        <Grid VerticalAlignment="Bottom">
            <Button Grid.Row="1" Content="(DEV) Crash App" FontSize="12" Click="Button_Click_1" HorizontalAlignment="Left"/>
            <Button Grid.Row="1" Content="GitHub" FontSize="12" Click="Button_Click" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>

</Window>
